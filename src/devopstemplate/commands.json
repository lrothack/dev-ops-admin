{
    "create": {
        "template": [
            "src",
            "tests",
            "make",
            "setuptools",
            "readme",
            "docker"
        ],
        "parameters": [
            {
                "name": "package-name",
                "default": null,
                "help": "default: slug of the project directory name"
            },
            {
                "name": "project-version",
                "default": "0.1.0",
                "help": "default: \"0.1.0\""
            },
            {
                "name": "project-url",
                "default": "",
                "help": "default: \"\""
            },
            {
                "name": "project-description",
                "default": "",
                "help": "default: \"\""
            },
            {
                "name": "author-name",
                "default": "{{git_name}}",
                "help": "default (from git): \"{{git_name}}\""
            },
            {
                "name": "author-email",
                "default": "{{git_email}}",
                "help": "default (from git): \"{{git_email}}\""
            }
        ],
        "components": [
            {
                "name": "no-gitignore-file",
                "default": true,
                "help": "Do not add .gitignore file",
                "template": [
                    "git"
                ]
            },
            {
                "name": "no-sonar",
                "default": true,
                "help": "Do not add SonarQube support",
                "template": [
                    "sonar"
                ]
            },
            {
                "name": "add-mongo",
                "default": false,
                "help": "Add MongoDB service",
                "template": [
                    "mongo"
                ]
            },
            {
                "name": "add-mlflow",
                "default": false,
                "help": "Add MLflow service",
                "template": [
                    "mlflow"
                ]
            }
        ]
    },
    "manage": {
        "components": [
            {
                "name": "add-makefile",
                "default": false,
                "help": "Add Makefile",
                "template": [
                    "make"
                ]
            },
            {
                "name": "add-makefile-min",
                "default": false,
                "help": "Add minimal Makefile",
                "template": [
                    "make-minimal"
                ]
            },
            {
                "name": "add-setuptools",
                "default": false,
                "help": "Add setuptools files",
                "template": [
                    "setuptools"
                ]
            },
            {
                "name": "add-docker",
                "default": false,
                "help": "Add Docker files",
                "template": [
                    "docker"
                ]
            },
            {
                "name": "add-gitignore",
                "default": false,
