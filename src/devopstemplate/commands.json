                "template": [
                    "git"
                ]
            },
            {
                "name": "add-sonar",
                "default": false,
                "help": "Add SonarQube support",
                "template": [
                    "sonar"
                ]
            },
            {
                "name": "add-mongo",
                "default": false,
                "help": "Add MongoDB service",
                "template": [
                    "mongo"
                ]
            },
            {
                "name": "add-mlflow",
                "default": false,
                "help": "Add MLflow service",
                "template": [
                    "mlflow"
                ]
            }
        ]
    },
    "cookiecutter": {
        "template": [
            "src",
